<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edit <%= campground.name %></h1>
    <div class="form" style="width:30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Campground Name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <label for="price">Price Per Night</label>
                <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>"></input>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-primary btn-block" type ="submit">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>