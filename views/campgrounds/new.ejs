<% include ../partials/header %>


<div class="row">
    <h1 style="text-align:center;">Create a New Campground</h1>
    <div class="form" style="width:30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Campground Name</label>
                <input class="form-control" type="text" name="name" Placeholder="Name"></input>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <label for="price">Price Per Night</label>
                <input class="form-control" type="number" name="price" Placeholder="Price" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" Placeholder="Image Url"></input>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" Placeholder="Description"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-primary btn-block" type ="submit">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>